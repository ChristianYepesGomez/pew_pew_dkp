{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": ["types.d.ts", "lib/**/*.js", "middleware/**/*.js", "routes/**/*.js", "services/**/*.js"],
  "exclude": ["node_modules", "dist", "data", "tests", "src"]
}
