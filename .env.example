# Server Configuration
PORT=3000
JWT_SECRET=your-secret-key-change-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Blizzard API (Optional - for real raid item data)
# Get credentials at: https://develop.battle.net/access/clients
BLIZZARD_CLIENT_ID=
BLIZZARD_CLIENT_SECRET=
BLIZZARD_REGION=eu
BLIZZARD_LOCALE=es_ES

# Email (Gmail SMTP - for password reset)
# Generate an App Password at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=Pew Pew DKP <your-email@gmail.com>

# Turso Database
# Local dev: file:./data/dkp.db (no token needed)
# Production: libsql://your-db-your-org.turso.io
TURSO_DATABASE_URL=file:./data/dkp.db
TURSO_AUTH_TOKEN=

# Warcraft Logs API (Optional)
WCL_CLIENT_ID=
WCL_CLIENT_SECRET=

# Error Monitoring (Sentry - optional)
# Create a project at https://sentry.io and paste the DSN here
SENTRY_DSN=

# Cron Secret (for scheduled tasks like weekly vault processing)
# Generate a random string and configure it in your cron service (e.g., cron-job.org)
# Endpoint: POST /api/cron/process-vault with header X-Cron-Secret: <this value>
CRON_SECRET=
